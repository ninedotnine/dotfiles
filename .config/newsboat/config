auto-reload no
reload-threads 2
show-read-feeds     no

cache-file ~/.cache/newsboat/cache.db
history-limit 0

datetime-format "%d %b 1%Y"
articlelist-format "%4i %f  %D  %?T?  |%-17T| ?%t"

color   listfocus           blue    default      
color   listfocus_unread    blue    default  bold
color   info                white   black

unbind-key  A
unbind-key  C
unbind-key  J
unbind-key  K
# unbind-key  N
unbind-key  ^K
unbind-key  ^D
unbind-key  G

bind-key j next
bind-key k prev
bind-key d delete-article
bind-key ^N toggle-article-read
bind-key G end
bind-key R rev-sort

article-sort-order date-desc

browser curler

notify-program "~/bin/newsboat-notifier"
